{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/app/services/http.service.ts",
    "src/app/store/actions/user-actions.ts",
    "src/app/store/reducers/user-reducer.ts",
    "src/app/store/effects/user-effects.ts",
    "src/app/store/actions/sync-actions.ts",
    "src/app/store/reducers/sync-reducer.ts",
    "src/app/store/effects/sync-effects.ts",
    "src/pages/create-user",
    "src/pages/login-user"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": false
  }
}